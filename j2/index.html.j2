
<body>
    <form method="POST" hx-post="/upload"  hx-encoding='multipart/form-data' hx-target="#ascii_result" hx-swap="outerHTML"
          _='on htmx:xhr:progress(loaded, total) set #progress.value to (loaded/total)*100'>
        <input type='file' name='file'>
        <button>
            Upload
        </button type="submit">
        <progress id='progress' value='0' max='100'></progress>
       
    </form>
    
    <textarea id="ascii_result" disabled=true></textarea>
</body> 